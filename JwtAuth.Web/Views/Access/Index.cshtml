@model MemberRequestModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
    Sign Up
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Member's Details</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" method="post" action="Access/SignUp">
        <div class="box-body">

        <div class="form-group">
            
            <div class="form-group col-sm-5">
            <label for="name" class="control-label">REFERRAL CODE</label>
            <input type="text" value='' class="form-control" name="ReferralCode"/>
            </div>

        </div>

        <div class="form-group">
            
            <div class="form-group col-sm-3">
            <label for="name" class="control-label">FIRST NAME</label>
            <input type="text" asp-for="FirstName"  value='' class="form-control" name="FirstName"/>
            </div>

            <div class="form-group col-sm-3">
            <label for="name" class="control-label">LAST NAME</label>
            <input type="text" asp-for="LastName" value='' class="form-control" name="LastName">
            </div>

        </div>
        
        <div class="form-group">
            
            <div class="form-group col-sm-3">
            <label for="name" class="control-label">EMAIL</label>
            <input type="text" asp-for="Email"  value='' class="form-control" name="Email"/>
            </div>

             <div class="form-group col-sm-3">
            <label for="name" class="control-label">USER NAME</label>
            <input type="text" asp-for="UserName"  value='' class="form-control" name="UserName"/>
            </div>

        </div>

        <div class="form-group">
            
            <div class="form-group col-sm-3">
            <label for="name" class="control-label">PASSWORD</label>
            <input type="password" asp-for="Password"  value='' class="form-control" name="Password"/>
            </div>

             <div class="form-group col-sm-3">
            <label for="name" class="control-label">CONFIRM PASSWORD</label>
            <input type="password" asp-for="Password"  value='' class="form-control" name="ConfirmPassword"/>
            </div>
        </div>


        <div class="box-footer">
        <button type="submit" class="btn btn-info">SIGN UP</button>
        @*<button type="submit" class="btn btn-warning">EXIT</button>*@
        </div>
        
        </div>
        <!-- /.box-body -->
        
        <!-- /.box-footer -->
    </form>
    </div>
    <!-- /.box -->
</section>